<!DOCTYPE html>
<html>
<head>
  <title>Blocipedia</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
    
<div class="row">
 <nav class="navbar navbar-default">  
  <div class="col-md-10">
     
         <div class="container-fluid">
             <div class="navbar-header">
              <p class="navbar-brand"><%= link_to 'Blocipedia', welcome_index_path %></p>
             </div>
             <ul class="nav navbar-nav">
                  <li><%= link_to 'Wikis', wikis_path %></li>
             </ul>
         </div>
     
  </div>
  <div class="col-md-2">
      <div class= "sign-in">
          <% if user_signed_in? %>
          Signed in as: <%= current_user.email %>
          <li> <%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %></li>
          <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %></li>
          <% else %>
           <li><%= link_to "Sign Up", new_user_registration_path, :class => 'navbar-link'  %></li>
           <li><%= link_to "Sign In", new_user_session_path, :class => 'navbar-link'  %></li>
          <% end %>
        </div>
      
      </div>
</div>
</nav>
  

    <% if flash[:notice] %>
       <div class="alert alert-success">
         <button type="button" class="close" data-dismiss="alert">&times;</button>
         <%= flash[:notice] %>
       </div>
     <% elsif flash[:alert] %>
       <div class="alert alert-warning">
         <button type="button" class="close" data-dismiss="alert">&times;</button>
         <%= flash[:alert] %>
       </div>
     <% end %>

<%= yield %>

</body>

</html>


  
