<h1>New Wiki</h1>
 
 <div class="row">
   <div class= "new-wiki-container">
      <div class="col-md-12">
         <%= form_for @wiki do |f| %>
            <%= f.label :title %>
            <%= f.text_field :title, class: 'form-control' %>
            <%= f.label :body %>
            <%= f.text_area :body, rows: 8, class: 'form-control' %>
            <% if current_user.role == 'premium'%>
            <%= f.label :private%>
            <%= f.check_box :private, class: 'form-control' %>
            <% end %>
         <%= f.submit "Save" %>
       <% end %>
      </div>
   </div>
 </div>